<h1>Edit Section</h1>

<% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for @article do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :text %>
  <%= f.button :submit %>
<%end %>

<%= link_to 'Back to articles list', articles_path %>